{{# each products }}
<div class="row justify-content-center container">
  {{# each this }}
   <div class="col-sm-6 col-md-4">
        <div class = "thumbnail">
          <img src="{{ this.imagePath}}" alt="apple" class="img-responsive">
          <div class="caption">
            <h3>{{ this.title }}</h3>
            <div class="price pill-left">${{ this.price}}</div>
            <input type="number" id="quantity" name="quantity" min="1" max="50">
            <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Add to Shopping Cart</a>
          </div>
        </div>
      </div>
      {{/each}}
</div>
{{/each}}
